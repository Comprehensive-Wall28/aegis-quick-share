{
    "manifest_version": 3,
    "name": "Aegis Quick Share",
    "version": "1.0.0",
    "description": "Quickly share URLs to your Aegis dashboard",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "clipboardWrite"
    ],
    "host_permissions": [
        "http://localhost:5173/*",
        "https://aegis-e31n.onrender.com/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Share to Aegis",
        "default_icon": "favicon.png"
    },
    "icons": {
        "16": "favicon.png",
        "48": "favicon.png",
        "128": "favicon.png"
    }
}